<div class="container welcome-index">
  <div class="row">
    <div class="col-md-12">
      <h2><span>Desafio</span> <br> de Programação.</h2>

      <div class="upload-file">
        <h4>Escolha um arquivo texto!</h4>
        <div id="underline"></div>
        <%= form_for @sales, url: sales_path, html: { multipart: true } do |f| %>
          <%= f.file_field :import_file %>
          <div class="actions">
            <%= f.submit 'Importar arquivo', class: 'btn btn-default' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
